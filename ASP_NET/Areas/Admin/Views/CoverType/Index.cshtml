
@model IEnumerable<CoverType>
@{
ViewData["Title"] = "Cover Type";
}

<h1 class="text-center">Index Cover Type</h1>

@*manggil dari Shared semua alert yang ada*@
<partial name="_Notification" />

<!-- Page Content -->
<div id="page-content-wrapper">
    <div class="container-fluid px-4">
   
        <div class="row my-5">
            <h3 class="fs-4 mb-3">
                <a type="button" class="btn btn-success" asp-controller="CoverType" asp-action="Create">Add +</a>
            </h3>
            <div class="col">
                <table class="table bg-white rounded shadow-sm  table-hover">
                    <thead>
                        <tr>
                            <th scope="col" width="50">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj in Model){
                        <tr>
                            <th scope="row">@obj.Id</th>
                            <td>@obj.Name</td>
                            <td>
                                <a type="button" class="btn btn-outline-warning" asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id">e</a>
                                <a type="button" class="btn btn-outline-danger" asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id">d</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
</div>
<!-- /#page-content-wrapper -->